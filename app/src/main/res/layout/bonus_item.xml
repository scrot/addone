<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_horizontal_margin">
    <TextView
        android:id="@+id/bonustitle"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />
    <TextView
        android:id="@+id/pointstext"
        android:text="@string/points_needed"
        android:textSize="@dimen/bonus_item_sub_text_size"
        android:layout_marginEnd="@dimen/bonus_item_sub_text_end_margin"
        android:layout_below="@id/bonustitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/bonuspoints"
        android:textSize="@dimen/bonus_item_sub_text_size"
        android:layout_below="@id/bonustitle"
        android:layout_toEndOf="@id/pointstext"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>
    <TextView
        android:id="@+id/rewardtext"
        android:text="@string/reward"
        android:textSize="@dimen/bonus_item_sub_text_size"
        android:layout_marginEnd="@dimen/bonus_item_sub_text_end_margin"
        android:layout_below="@id/pointstext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/bonusreward"
        android:textSize="@dimen/bonus_item_sub_text_size"
        android:layout_below="@id/pointstext"
        android:layout_toEndOf="@id/rewardtext"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>
    <ImageButton
        android:id="@+id/bonusremove"
        android:src="@drawable/ic_cross"
        android:background="@null"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:onClick="removeBonus"/>
</RelativeLayout>