<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_horizontal_margin"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/bonustitle"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />
    <TextView
        android:id="@+id/pointstext"
        android:text="@string/points_needed"
        android:textStyle="bold"
        android:textSize="@dimen/bonus_item_sub_text_size"
        android:paddingEnd="4sp"
        android:layout_toStartOf="@+id/bonuspoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/bonuspoints"
        android:textSize="@dimen/bonus_item_sub_text_size"
        android:layout_toStartOf="@+id/rewardtext"
        android:layout_marginEnd="8dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>
    <TextView
        android:id="@+id/rewardtext"
        android:text="@string/reward"
        android:textStyle="bold"
        android:textSize="@dimen/bonus_item_sub_text_size"
        android:paddingEnd="4sp"
        android:layout_toStartOf="@+id/bonusreward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/bonusreward"
        android:textSize="@dimen/bonus_item_sub_text_size"
        android:layout_alignParentEnd="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>
</RelativeLayout>